{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"inlineSources": true,
		"inlineSourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ESNext"]
	}
}
